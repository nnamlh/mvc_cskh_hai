@model PagedList.IPagedList<NDHSITE.Models.HaiStaff>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách nhân viên";
}

<div class="page-header">
    <h3 class="page-title">Nhân viên công ty</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Nhân viên công ty</a></li>
    </ol>
</div> <!-- /.page-header -->

<p class="">Danh sách nhân viên công ty.</p>

<div class="portlet portlet-boxed">
    <div class="portlet-header">
        <h4 class="portlet-title">
            Danh sách nhân viên
        </h4>
    </div> <!-- /.portlet-header -->
    <div class="portlet-body">


        <div class="row">
            <form method="get">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Chọn chi nhánh</label>
                        <select class="form-control selectpicker" name="branchId" data-live-search="true" @(ViewBag.IsDisable == 1 ? "disabled" : "")>
                            @foreach (var item in ViewBag.AllBranch)
                            {
                                if (item.Id == ViewBag.BranchId)
                                {
                                    <option data-tokens="@item.Name" value="@item.Id" selected>@item.Name</option>
                                }
                                else
                                {
                                    <option data-tokens="@item.Name" value="@item.Id">@item.Name</option>
                                }

                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Xem thông tin</button>
                    <br />
                    <br />
                </div>
                <div class="col-sm-6">
                    <div class="form-group" id="searchchoose">
                        <label>Gõ tên nhân viên</label>
                        <input type="text" class="form-control" name="search" value="@ViewBag.SearchText" />
                    </div>
                  
                </div>
          
            </form>
           
            <div class="col-sm-12">
                <fieldset>
                    <table class="table table-striped table-bordered thumbnail-table">
                        <thead>
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Chử ký</th>
                                <th>Tên nhân viên</th>
                                <th>Phòng ban</th>
                                <th>Chi nhánh</th>
                                <th>Thông tin</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.IsLock == 1?"warning":"")">
                                    <td class="valign-middle">
                                        <div class="thumbnail">
                                            <div class="thumbnail-view">
                                                <a href="@item.AvatarUrl" class="image-link" title="@item.FullName">
                                                    <img src="@item.AvatarUrl" alt="@item.FullName" class="img-responsive" width="125" />
                                                </a>
                                            </div>
                                        </div> <!-- /.thumbnail -->
                                    </td>
                                    <td class="valign-middle">
                                        <div class="thumbnail">
                                            <div class="thumbnail-view">
                                                <a href="@item.SignatureUrl" class="image-link" title="@item.FullName">
                                                    <img src="@item.SignatureUrl" alt="@item.FullName" class="img-responsive" width="125" />
                                                </a>
                                            </div>
                                        </div> <!-- /.thumbnail -->
                                    </td>
                                    <td>@item.FullName</td>
                                    <td>@item.HaiDepartment.Name</td>
                                    <td>@item.HaiBranch.Name</td>
                                    <td class="file-info">
                                        <span><strong class="semibold">Chức vụ:</strong> @item.HaiPosition.Name</span><br />
                                        <span><strong class="semibold">Mã nhân viên:</strong> @item.Code</span> <br />
                                        <span><strong class="semibold">Khu vực:</strong> @item.HaiBranch.HaiArea.Name</span><br />
                                        <span><strong class="semibold">Số điện thoái:</strong> @item.Phone</span> <br />
                                        <span><strong class="semibold">Email:</strong> @item.Email</span> <br />
                                        <span><strong class="semibold">Tài khoản:</strong> @item.UserLogin</span><br />
                                        <span><strong class="semibold">Tình trạng:</strong> @item.Notes</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("ShowStaff", new { page,  branchId = ViewBag.BranchId, search = ViewBag.SearchText }))
                </fieldset>

            </div>
        </div>
    </div>
</div>

@section styles {

    <!-- bootstrap select-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.0/css/bootstrap-select.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css" rel="stylesheet" />
}

@section scripts {
    <!-- bootstrap select js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.0/js/bootstrap-select.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('.image-link').magnificPopup({
                type: 'image',
                closeBtnInside: false,
                closeOnContentClick: true,

                image: {
                    verticalFit: true,
                    titleSrc: function (item) {
                        return item.el.attr('title') + ' &middot; <a class="image-source-link" href="' + item.src + '" target="_blank">open original</a>';
                    }
                }

            });
        });

    </script>
}