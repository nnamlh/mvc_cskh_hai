@model PagedList.IPagedList<NDHSITE.Models.TreeInfo>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ShowTree";
}

<div class="page-header">
    <h3 class="page-title">Thông tin cây trồng</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Thông tin cây trồng</a></li>
    </ol>
</div> <!-- /.page-header -->

<div class="portlet portlet-boxed">
    <div class="portlet-body">
        <div class="row">
            <form method="get">
                <div class="col-sm-8">
                    <div class="form-group">
                        <input type="text" class="form-control" name="search" value="@ViewBag.SearchText" />
                    </div>
                </div>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-primary">Tìm cầy trồng</button>
                </div>
            </form>
        </div>

        <br />

        <fieldset>
            <table class="table table-striped table-bordered thumbnail-table">
                <thead>
                    <tr>
                        <th>Tên cây trồng</th>
                        <th>Loại cây</th>
                        <th>Tổng diện tích (m2)</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.TreeType</td>
                            <td>@item.Acreage</td>
                            <td>@item.STT</td>
                            <td>@item.CreateDate.Value.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("showtree",
                              new { page, search = ViewBag.SearchText }))
        </fieldset>

    </div>

</div>




