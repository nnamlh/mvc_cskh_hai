@model NDHSITE.Models.HaiStaff
@{
    ViewBag.Title = "AddAgency";
}

<div class="page-header">
    <h3 class="page-title">Quản lý khách hàng cho nhân viên</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Quản lý khách hàng cho nhân viên</a></li>
    </ol>
</div> <!-- /.page-header -->
<p class="">Nhân viên: @Model.FullName - @Model.Code</p>

<div class="portlet portlet-boxed">

    <div class="portlet-body">
        <div class="layout layout-main-right layout-stack-sm">
            <div class="col-md-2 col-sm-3 layout-sidebar">

                <ul id="myTab" class="nav nav-layout-sidebar nav-stacked">
                    <li class="active">
                        <a href="#allstaff" data-toggle="tab">
                            Khách hàng cấp 2
                        </a>
                    </li>
                    <li>
                        <a href="#addstaff_tab" data-toggle="tab">
                            Khách hàng cấp 1
                        </a>
                    </li>
                </ul>

            </div> <!-- /.col -->

            <div class="col-md-10 col-sm-9 layout-main">
                <div id="settings-content" class="tab-content stacked-content">
                    <div class="tab-pane fade in active" id="allstaff">
                        <form method="post" enctype="multipart/form-data"  onsubmit="if(!confirm('Thêm khách hàng?')){return false;}">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="type" value="c2" />
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Nhập mã khách hàng cần thêm</label>
                                        <input type="text" class="form-control" name="AgencyId" />
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Thêm</button>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Thêm nhiều khách hàng từ Excel</label>
                                        <input type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" class="form-control" name="files" />
                                        <a href="~/haiupload/stafftandagency.xlsx" class="form-control">Tải file mẫu</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <fieldset>
                            <table class="table table-striped table-bordered thumbnail-table">
                                <thead>
                                    <tr>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.StaffWithC2.ToList())
                                    {
                                        <tr>
                                            <td>@item.C2Info.Code</td>
                                            <td>@item.C2Info.StoreName - @item.C2Info.Deputy</td>
                                            <td><a href="/agency/modifycii/@item.C2Info.Id" target="_blank">Chi tiết</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </fieldset>
                    </div>
                    <div class="tab-pane fade" id="addstaff_tab">
                        <form method="post" enctype="multipart/form-data" onsubmit="if(!confirm('Thêm khách hàng?')){return false;}">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="type" value="c1" />
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Nhập mã khách hàng cần thêm</label>
                                        <input type="text" class="form-control" name="AgencyId" />
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Thêm</button>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Thêm nhiều khách hàng từ Excel</label>
                                        <input type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" class="form-control" name="files" />
                                        <a href="~/haiupload/stafftandagency.xlsx" class="form-control">Tải file mẫu</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <fieldset>
                            <table class="table table-striped table-bordered thumbnail-table">
                                <thead>
                                    <tr>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.C1Info.ToList())
                                    {
                                        <tr>
                                            <td>@item.Code</td>
                                            <td>@item.StoreName - @item.Deputy</td>
                                            <td><a href="/agency/modifycii/@item.Id" target="_blank">Chi tiết</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>