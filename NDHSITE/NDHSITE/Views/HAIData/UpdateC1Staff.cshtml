@{
    ViewBag.Title = "UpdateC1Staff";
}

<div class="page-header">
    <h3 class="page-title">Quản lý khách hàng cấp 1 cho nhân viên</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Quản lý khách hàng cho nhân viên</a></li>
    </ol>
</div> <!-- /.page-header -->

<div class="portlet portlet-boxed">

    <div class="portlet-body">
        <div class="layout layout-main-right layout-stack-sm">
            <div class="col-md-2 col-sm-3 layout-sidebar">

                <ul id="myTab" class="nav nav-layout-sidebar nav-stacked">
                    <li class="active">
                        <a href="#allstaff" data-toggle="tab">
                           Thêm
                        </a>
                    </li>
                    <li>
                        <a href="#addstaff_tab" data-toggle="tab">
                            Xóa
                        </a>
                    </li>
                </ul>

            </div> <!-- /.col -->

            <div class="col-md-10 col-sm-9 layout-main">
                <div id="settings-content" class="tab-content stacked-content">
                    <div class="tab-pane fade in active" id="allstaff">
                        <form method="post" onsubmit="if(!confirm('Thêm khách hàng?')){return false;}">
             
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Danh sách CI</label>
                                        <textarea class="form-control" name="CI"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Thêm</button>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Danh sách nhân viên</label>
                                        <textarea class="form-control" name="Staff"></textarea>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <fieldset>
                            <table class="table table-striped table-bordered thumbnail-table">
                                <thead>
                                    <tr>
                                        <th>Mã khách hàng</th>
                                        <th>Tên khách hàng</th>
                                        <th>Cụm</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                 
                                </tbody>
                            </table>
                        </fieldset>
                    </div>
                    <div class="tab-pane fade" id="addstaff_tab">
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>