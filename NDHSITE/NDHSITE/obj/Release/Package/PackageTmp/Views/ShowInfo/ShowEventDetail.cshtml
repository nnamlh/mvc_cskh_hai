@model NDHSITE.Models.EventInfo
@{
    Layout = null;
}

@if (Model == null)
{
    <p>Không tin thấy dữ liệu.</p>
}
else
{
    <div id="bigModal" class="modal modal-styled fade" tabindex="-1" role="dialog">

        <div class="modal-dialog modal-lg">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="modal-title">Thông tin chi tiết</h3>
                </div> <!-- /.modal-header -->

                <div class="modal-body" id="modal-body-content">

                    <h5>Thông tin chung</h5>
                    <p><strong>Tên chương trình</strong></p>
                    <p>@Model.Name</p>
                    <p><strong>Nội dung</strong></p>
                    <p>@Model.Descibe</p>
                    <p><strong>Thời gian bắt đầu</strong></p>
                    <p>@Model.BeginTime.Value.ToShortDateString()</p>
                    <p><strong>Thời gian kết thúc</strong></p>
                    <p>@Model.EndTime.Value.ToShortDateString()</p>
                    <hr />
                    <h5>Khu vực cấp 2</h5>
                    <table class="table table-striped table-bordered thumbnail-table">
                        <thead>
                            <tr>
                                <th>Tên khu vực</th>
                                <th>Mã khu vực</th>
                                <th>Ghi chú</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.EventAreas.ToList())
                            {
                                <tr>
                                    <td>@item.HaiArea.Name</td>
                                    <td>@item.HaiArea.Code</td>
                                    <td>@item.HaiArea.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr />
                    <h5>Khách hàng cấp 2</h5>
                    <div class="tableheight">
                        <table class="table table-striped table-bordered thumbnail-table">
                            <thead>
                                <tr>
                                    <th>Tên khách hàng</th>
                                    <th>Mã khách hàng</th>
                                    <th>Khu vực</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.EventCustomers.ToList())
                                {
                                    <tr>
                                        <td>@item.CInfoCommon.CName</td>
                                        <td>@item.CInfoCommon.CCode</td>
                                        <td>@item.CInfoCommon.HaiArea.Code</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <hr />
                    <h5>Khu vực nông dân</h5>
                    <table class="table table-striped table-bordered thumbnail-table">
                        <thead>
                            <tr>
                                <th>Tên khu vực</th>
                                <th>Mã khu vực</th>
                                <th>Ghi chú</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.EventAreaFarmers.ToList())
                            {
                                <tr>
                                    <td>@item.HaiArea.Name</td>
                                    <td>@item.HaiArea.Code</td>
                                    <td>@item.HaiArea.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <hr />
                    <h5>Khách hàng nông dân</h5>
                    <div class="tableheight">
                        <table class="table table-striped table-bordered thumbnail-table">
                            <thead>
                                <tr>
                                    <th>Tên khách hàng</th>
                                    <th>Mã khách hàng</th>
                                    <th>Khu vực</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.EventCustomerFarmers.ToList())
                                {
                                    <tr>
                                        <td>@item.CInfoCommon.CName</td>
                                        <td>@item.CInfoCommon.CCode</td>
                                        <td>@item.CInfoCommon.HaiArea.Code</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <hr />
                    <h5>Phần thưởng</h5>
                    <table class="table table-striped table-bordered thumbnail-table">
                        <thead>
                            <tr>
                                <th>Phần thưởng</th>
                                <th>Điểm</th>
                                <th>Hình ảnh</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.AwardInfoes.ToList())
                            {
   
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Point</td>
                                    <td>
                                        <div class="thumbnail">
                                            <div class="thumbnail-view">
                                                <a href="@item.Thumbnail" class="image-link" title="@item.Name">
                                                    <img src="@item.Thumbnail" alt="@item.Name" class="img-responsive" width="125" />
                                                </a>
                                            </div>
                                        </div> <!-- /.thumbnail -->
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <hr />
                    <h5>Sản phẩm</h5>
                    <div class="tableheight">
                        <table class="table table-striped table-bordered thumbnail-table">
                            <thead>
                                <tr>
                                    <th>Mã sản phấm</th>
                                    <th>Tên sản phấm</th>
                                    <th>Barcode</th>
                                    <th>Điểm</th>
                                </tr>
                            </thead>

                            <tbody id="resultproduct">
                                @foreach (var item in Model.EventProducts.ToList())
                                {
                                    <tr>
                                        <td>@item.ProductInfo.PCode</td>
                                        <td>@item.ProductInfo.PName</td>
                                        <td>@item.ProductInfo.Barcode</td>
                                        <td>@item.Point</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                   

                </div>

            </div>

         
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        </div> <!-- /.modal-footer -->

    </div>
}
