@model PagedList.IPagedList<NDHSITE.Models.EventInfo>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách khuyến mãi";
}

<div class="page-header">
    <h3 class="page-title">Danh sách khuyến mãi</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Danh sách khuyến mãi</a></li>
    </ol>
</div> <!-- /.page-header -->
<div class="portlet portlet-boxed">
    <div class="portlet-header">
        <h4 class="portlet-title">
            Danh sách khuyến mãi
        </h4>
    </div> <!-- /.portlet-header -->
    <div class="portlet-body">
        <form method="get">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <select class="form-control" name="type">
                            <option value="1" @(ViewBag.Type == 1 ? "selected" : "")>Khu vực</option>
                            <option value="2" @(ViewBag.Type == 2 ? "selected" : "")>Khách hàng</option>
                            <option value="3" @(ViewBag.Type == 3 ? "selected" : "")>Sản phẩm</option>
                            <option value="4" @(ViewBag.Type == 4 ? "selected" : "")>Tên khuyến mãi</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Tìm kiếm (theo mã)</label>
                        <input type="text" value="@ViewBag.SearchText" name="search" class="form-control" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary">Xem thông tin</button>
                </div>
            </div>
        </form>

        <fieldset>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Tên sự kiện</th>
                        <th>Mổ tả</th>
                        <th>Hình ảnh</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <span><strong class="semibold">Bắt đầu:</strong> @item.BeginTime.Value.ToString("dd/MM/yyyy")</span> <br />
                                <span><strong class="semibold">Kết thúc:</strong> @item.EndTime.Value.ToString("dd/MM/yyyy")</span><br>
                                <span><strong class="semibold">Nội dung:</strong> @item.Descibe</span><br />
                                <span>
                                    <strong class="semibold">Khu vực: </strong>
                                    @foreach (var area in item.EventAreas.ToList())
                                    {
                                        <span>@area.HaiArea.Name , </span>
                                    }
                                </span>
                            </td>
                            <td>
                                <div class="thumbnail">
                                    <div class="thumbnail-view">
                                        <a href="@item.Thumbnail" class="image-link" title="@item.Name">
                                            <img src="@item.Thumbnail" alt="@item.Name" class="img-responsive" width="125" />
                                        </a>
                                    </div>
                                </div> <!-- /.thumbnail -->
                            </td>
                            <td><a href="javascript:showDetail('@item.Id')">Chi tiết</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("showevent",
                                                                     new { page, areaId = ViewBag.AreaId, search = ViewBag.SearchText }))

        </fieldset>
    </div>
</div>


<div id="result">

</div>

@section styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css" rel="stylesheet" />

    <style>
        #modal-body-content {
            height: 500px;
            overflow-y: auto;
        }
    </style>

<style type="text/css">
    .tableheight {
        height: 350px !important;
        overflow-y: auto;
    }
</style>

}

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('.image-link').magnificPopup({
                type: 'image',
                closeBtnInside: false,
                closeOnContentClick: true,

                image: {
                    verticalFit: true,
                    titleSrc: function (item) {
                        return item.el.attr('title') + ' &middot; <a class="image-source-link" href="' + item.src + '" target="_blank">open original</a>';
                    }
                }

            });
        });

        function showDetail(id) {
            $('#result').html('');
            $.ajax({
                type: "GET",
                url: "/showinfo/ShowEventDetail",
                data: { id: id },
                beforeSend: showProgressDialog,
                complete: hideProgressDialog,
                success: function (response) {
                    $('#result').html(response);
                    $('#bigModal').modal('show');
                }
            });
        }



    </script>
}
