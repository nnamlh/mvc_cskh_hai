@model NDHSITE.Models.RegisterViewModel
@{
    ViewBag.Title = "Modify";
    var agency = ViewBag.AGENCY as NDHSITE.Models.C2Info;
}

<div class="page-header">
    <h3 class="page-title">Thông tin đại lý cấp 2</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Đại lý cấp 2</a></li>
    </ol>
</div> <!-- /.page-header -->

<div class="portlet portlet-boxed">

    <div class="portlet-body">
        <div class="layout layout-main-right layout-stack-sm">
            <div class="col-md-2 col-sm-3 layout-sidebar">
                <ul id="myTab" class="nav nav-layout-sidebar nav-stacked">
                    <li class="active">
                        <a href="#allagency" data-toggle="tab">
                            Thông tin khách hàng
                        </a>
                    </li>
                    <li>
                        <a href="#staff" data-toggle="tab">
                            Nhân viên quản lý
                        </a>
                    </li>
                    <li>
                        <a href="#addagency" data-toggle="tab">
                            Tài khoản
                        </a>
                    </li>
                    <li>
                        <a href="#manageagency" data-toggle="tab">
                            Quản lý tài khoản
                        </a>
                    </li>
                </ul>
            </div>

            <div class="col-md-10 col-sm-9 layout-main">
                <div id="settings-content" class="tab-content stacked-content">
                    <div class="tab-pane fade in active" id="allagency">
                        <form method="post" onsubmit="if(!confirm('Chỉnh sửa khách hàng?')){return false;}">
                            <fieldset>
                                <input type="hidden" value="@agency.Id" name="Id" />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Mã đại lý</label>
                                            <input type="text" name="Code" class="form-control" required value="@agency.Code" />
                                        </div>

                                        <div class="form-group">
                                            <label>Tên cửa hàng</label>
                                            <input type="text" name="StoreName" class="form-control" required value="@agency.StoreName" />
                                        </div>

                                        <div class="form-group">
                                            <label>Người đại diện</label>
                                            <input type="text" name="Deputy" class="form-control" required value="@agency.Deputy" />
                                        </div>
                                        <div class="form-group">
                                            <label>Đại lý cấp 1</label>
                                            <input class="form-control c1search" type="text" name="C1Code" required  value="@agency.C1Info.Code">
                                            <p class="c1name"><i></i></p>
                                        </div>
                                        <div class="form-group">
                                            <label>Hạng</label>
                                            <input type="text" name="CRank" class="form-control" required value="@agency.CInfoCommon.CRank" />
                                        </div>
                                        <div class="form-group">
                                            <label>Chi nhánh</label>
                                            <select class="form-control selectpicker" data-live-search="true" name="BranchCode">
                                                @foreach (var item in ViewBag.BranchAll)
                                                {
                                                    if (item.Code == agency.CInfoCommon.BranchCode)
                                                    {
                                                         <option value="@item.Code" selected>@item.Name</option>
                                                    }
                                                    else
                                                    {
                                                         <option value="@item.Code">@item.Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                   
                                        <div class="form-group">
                                            <label>Phone</label>
                                            <input type="text" name="Phone" class="form-control" required value="@agency.CInfoCommon.Phone" />
                                        </div>
                                        <div class="form-group">
                                            <label>CMND</label>
                                            <input type="text" name="IdentityCard" class="form-control"  value="@agency.CInfoCommon.IdentityCard" />
                                        </div>
                                        <div class="form-group">
                                            <label>TK ngân hàng</label>
                                            <input type="text" name="BankAccount" class="form-control"  value="@agency.CInfoCommon.BankAccount" />
                                        </div>
                                        <div class="form-group">
                                            <label>Người hưởng thụ</label>
                                            <input type="text" name="BankAccountHolder" class="form-control"  value="@agency.CInfoCommon.BankAccountHolder" />
                                        </div>
                                        <div class="form-group">
                                            <label>Ngân hàng - chi nhánh</label>
                                            <input type="text" name="BackName" class="form-control"  value="@agency.CInfoCommon.BackName" />
                                        </div>
                            
                                    </div>


                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Langitude</label>
                                            <input type="number" name="Lat" class="form-control" value="@agency.CInfoCommon.Lat"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Longitude</label>
                                            <input type="number" name="Lng" class="form-control" value="@agency.CInfoCommon.Lng"/>
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" name="Email" class="form-control" value="@agency.CInfoCommon.Email" />
                                        </div>

                                        <div class="form-group">
                                            <label>Ngày sinh</label>
                                            <input type="text" name="birthday" class="form-control" id="datetimecreate" value="@agency.CInfoCommon.BirthDay" />
                                        </div>
                                        <div class="form-group">
                                            <label>Nơi sinh</label>
                                            <input type="text" name="PlaceOfBirth" class="form-control" value="@agency.CInfoCommon.PlaceOfBirth" />
                                        </div>
                                        <div class="form-group">
                                            <label>Địa chỉ</label>
                                            <input type="text" name="AddressInfo" class="form-control" value="@agency.CInfoCommon.AddressInfo, @agency.CInfoCommon.DistrictName, @agency.CInfoCommon.ProvinceName " />
                                        </div>
                                        <div class="form-group">
                                            <label>Thành phố/tỉnh</label>

                                            <input type="text" class="form-control" name="ProvinceName" value="@agency.CInfoCommon.ProvinceName"/>

                                        </div>
                                        <div class="form-group">
                                            <label>Quận/huyện</label>

                                            <input type="text" class="form-control" name="DistrictName" value="@agency.CInfoCommon.DistrictName" />

                                        </div>
                                        <div class="form-group">
                                            <label>Phường/xã</label>

                                            <input type="text" class="form-control" name="WardName" value="@agency.CInfoCommon.WardName" />

                                        </div>
                                        <div class="form-group">
                                            <label>Mã số thuế</label>
                                            <input type="text" name="TaxCode" class="form-control"  value="@agency.CInfoCommon.TaxCode" />
                                        </div>
                                        <div class="form-group">
                                            <label>Giấy phép kinh doanh</label>
                                            <input type="text" name="BusinessLicense" class="form-control"  value="@agency.CInfoCommon.BusinessLicense" />
                                        </div>
                                        <div class="form-group">
                                            <label>Ghi chú</label>
                                            <textarea name="Notes" class="form-control">@agency.CInfoCommon.Notes</textarea>
                                        </div>
                                      
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit">Chỉnh sửa</button>
                                </div>
                            </fieldset>

                        </form>
                    </div>
                    <div class="tab-pane fade" id="staff">
                        <fieldset>
                            <table class="table table-striped table-bordered thumbnail-table">
                                <thead>
                                    <tr>
                                        <th>Mã nhân viên</th>
                                        <th>Tên nhân viên</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in agency.StaffWithC2.ToList())
                                    {
                                        <tr>
                                            <td>@item.HaiStaff.Code</td>
                                            <td>@item.HaiStaff.FullName</td>
                                            <td><a href="/haistaff/modifystaff/@item.StaffId" target="_blank">Chi tiết</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </fieldset>
                    </div>
                      <div class="tab-pane fade" id="addagency">
                        @if (agency.CInfoCommon.UserLogin == null)
                        {
                            using (Html.BeginForm("RegisterAgency", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <input type="hidden" name="AgencyType" value="CII" />
                                <input type="hidden" name="AgencyId" value="@agency.Id" />
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()
                                <div class="form-group">
                                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Chọn quyền</label>
                                    <div class="col-md-10">
                                        <select name="role" class="form-control">
                                            @foreach (var item in ViewBag.RoleList)
                                            {
                                                <option value="@item.Name">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-primary" value="Register" />
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <h4>Tài khoản hiện tại: @agency.CInfoCommon.UserLogin</h4>
                        }
                    </div>
                    <div class="tab-pane fade" id="manageagency">
                        <form method="post" onsubmit="if(!confirm('Thực hiện thao tác?')){return false;}" action="/agency/ActiveUserC2">
                            <input type="hidden" value="@agency.Id" name="Id" />
                            <div class="row">
                                <div class="col-sm-5">
                                    <select class="form-control" name="Status">
                                        @if (agency.IsActive == 1)
                                        {
                                            <option value="1">Khóa tài khoản</option>
                                        }
                                        else
                                        {
                                            <option value="2">Mở tài khoản</option>
                                        }
                                    </select>
                                    <br />
                                    <button type="submit" class="btn btn-primary">Thực hiện</button>
                                </div>
                            </div>
                        </form>

                        <br />
                       
                        @if (agency.CInfoCommon.UserLogin == null && agency.IsActive == 0)
                        {
                            <form method="post" onsubmit="if(!confirm('Xóa khách hàng?')){return false;}" action="/agency/removec2">
                                <input type="hidden" value="@agency.Id" name="Id" />
                                <button type="submit" class="btn btn-primary">Xóa khách hàng</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles {

    <!-- bootstrap select-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.0/css/bootstrap-select.min.css">
    <link href="~/content/bootstrap-datetimepicker.min.css" rel="stylesheet">
}

@section scripts {
    <!-- bootstrap select js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.11.0/js/bootstrap-select.min.js"></script>
    <!-- date bootstrap -->
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/scripts/moment-with-locales.min.js"></script>
    <script src="~/scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/scripts/bootstrap-typeahead.js"></script>

    <script type="text/javascript">

        $('#datetimecreate').datetimepicker({
            locale: 'vi',
            format: 'MM/DD/YYYY HH:mm',
            defaultDate: new Date()
        });

        databranch();

        function databranch() {
            $.ajax({
                url: "/agency/c1json",
                type: "get",
                success: function (response) {

                    $('.c1search').typeahead({
                        source: response,
                        display: 'Code',
                        val: 'Name',
                        itemSelected: displayResult
                    });

                }
            });
        }


        function displayResult(item, val, text) {
            console.log(item);
            $('.c1name').show().html('<i>' + val + '</i>');
        }

        

    </script>
}