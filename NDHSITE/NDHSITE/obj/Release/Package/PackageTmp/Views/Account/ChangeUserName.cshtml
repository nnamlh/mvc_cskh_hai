@{
    ViewBag.Title = "Change UserName";
}

<div class="page-header">
    <h3 class="page-title">Quản trị</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Quản trị</a></li>
    </ol>
</div> <!-- /.page-header -->

<div class="portlet portlet-boxed">

    <div class="portlet-body">
        <div class="layout layout-main-right layout-stack-sm">
            <div class="col-md-3 col-sm-3 layout-sidebar">
                @Html.Action("AdminSlideMenu", "Home", new { code = "accountchangeusername" })
            </div>
            <div class="col-md-9 col-sm-9 layout-main">
                <div id="settings-content" class="tab-content stacked-content">
                    <div class="tab-pane fade in active">

                        <form method="post"  onsubmit="if(!confirm('Đổi tên tài khoản ?')){return false;}">
                            <div class="row">

                                <div class="col-sm-6">
                                    @if (ViewBag.msg != null)
                                    {
                                        <p>@ViewBag.msg</p>
                                    }
                                    <div class="form-group">
                                        <label>Tên tài khoản</label>
                                        <input type="text" class="form-control" name="user" required />
                                    </div>

                                    <div class="form-group">
                                        <label>Tên muổn đổi thành</label>
                                        <input type="text" class="form-control" name="newuser" required />
                                    </div>
                                    <button class="btn-primary btn" type="submit">Cập nhật</button>
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
