@model IEnumerable<NDHSITE.Models.MenuGroup>

@{
    Layout = null;
}

<nav class="collapse mainnav-collapse" role="navigation">

    <ul class="mainnav-menu">


        @foreach (var item in Model)
        {
            <li class="dropdown ">

                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">
                    @item.Name
                    <i class="mainnav-caret"></i>
                </a>

                <ul class="dropdown-menu mega-menu-2" role="menu">

                    <li>
                        <div class="mega-menu-col">
                            <ul class="mega-menu-menu">

                                @foreach (var menu in item.Menus)
                                {
                                    if (menu.Position == 0)
                                    {
                                        <li>
                                            <a href="@menu.Url">
                                                <i class="@menu.Icon"></i>
                                                @menu.Name
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div> <!-- /.mega-menu-col -->


                        <div class="mega-menu-col">
                            <ul class="mega-menu-menu">

                                @foreach (var menu in item.Menus)
                                {
                                    if (menu.Position == 1)
                                    {
                                        <li>
                                            <a href="@menu.Url">
                                                <i class="@menu.Icon"></i>
                                                @menu.Name
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div> <!-- /.mega-menu-col -->

                    </li>

                </ul>

            </li>
        }
    </ul>
</nav>