@{
    ViewBag.Title = "Tra cứu hành trình sản phẩm";
}

<div class="portlet portlet-boxed">
    <div class="portlet-header">
        <h4 class="portlet-title">
            Tra cứu hành trình sản phẩm
        </h4>
    </div> <!-- /.portlet-header -->
    <div class="portlet-body">
        <form>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Nhập mã barcode sản phẩm: </label>
                        <input type="text" value="@ViewBag.Barcode" name="barcode" class="form-control" />
                    </div>
                    <button class="btn btn-primary" type="submit">Xem</button>
                </div>

            </div>

        </form>
        <br />
        <fieldset>
            <table class="table table-striped table-bordered thumbnail-table">

                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Kho</th>
                        <th>Thời gian</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>

                <tbody>
                    @if (ViewBag.Tracking != null)
                    {
                        var idx = 1;
                        foreach (var item in ViewBag.Tracking as IEnumerable<NDHSITE.Models.PTrackingInfo>)
                        {
                            <tr>
                                <td>@idx</td>
                                <td>@item.name</td>
                                <td>
                                    <span><strong>Nhập kho: </strong>@item.importTime</span><br />
                                    <span><strong>Xuất kho: </strong>@item.exportTime</span>
                                </td>
                                <td>@item.status</td>
                            </tr>
                            idx++;
                        }
                    }
                </tbody>
            </table>

        </fieldset>
    </div>
</div>