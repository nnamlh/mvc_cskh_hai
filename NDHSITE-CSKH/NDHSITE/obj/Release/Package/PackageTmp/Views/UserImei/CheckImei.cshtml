@model NDHSITE.Models.UserInfoData
    @{
        ViewBag.Title = "CheckImei";
    }

    <div class="portlet portlet-boxed">
        <div class="portlet-header">
            <h4 class="portlet-title">
                Kiểm tra Imei của người dùng
            </h4>
        </div> <!-- /.portlet-header -->
        <div class="portlet-body">

            <form method="get">

                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Tên đăng nhập người dùng:</label>
                            <input type="text" name="user" value="@ViewBag.User" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Xem</button>
                    </div>
                </div>

            </form>

            <br />

            <fieldset>
                @if (Model == null)
                {
                    <p>Không tìm thấy</p>
                }
                else
                {

                    <table class="table table-striped table-bordered thumbnail-table">
                        <tbody>
                            <tr>
                                <td>Tài khoản của: </td>
                                <td>@Model.type</td>
                            </tr>
                            <tr>
                                <td>Mã tài khoản:</td>
                                <td>@Model.code</td>
                            </tr>
                            <tr>
                                <td>Họ và tên: </td>
                                <td>@Model.fullname</td>
                            </tr>
                            <tr>
                                <td>Địa chỉ: </td>
                                <td>@Model.address</td>
                            </tr>
                            <tr>
                                <td>Điện thoại: </td>
                                <td>@Model.phone</td>
                            </tr>
                            <tr>
                                <td>Ngày sinh: </td>
                                <td>@Model.birthday</td>
                            </tr>
                            <tr>
                                <td>Tài khoản : </td>
                                <td>@Model.user</td>
                            </tr>
                            <tr>
                                <td>Khu vực: </td>
                                <td>@Model.area</td>
                            </tr>
                            <tr>
                                <td>Chi nhánh:</td>
                                <td>@Model.branch</td>
                            </tr>

                            @if (ViewBag.DataImei != null)
                            {
                                <tr>
                                <td>Thông tin Imei:</td>
                                <td>
                                    <form method="post" action="/userimei/resetimei">
                                        <input type="hidden" name="user" value="@ViewBag.User" />
                                        <div class="form-group">
                                            <label>Imei</label>
                                            <input type="text" disabled value="@ViewBag.DataImei.Imei" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Lần đầu đăng nhập</label>
                                            <input type="text" disabled value="@ViewBag.DataImei.CreateDate" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label>Lần đăng nhập giần nhất</label>
                                            <input type="text" disabled value="@ViewBag.DataImei.ModifyDate" class="form-control" />
                                        </div>
                                        @if (ViewBag.DataImei.IsUpdate == 0)
                                        {
                                            <button class="btn btn-primary" type="submit">Đăng nhập lại</button>
                                        }
                                    </form>

                                </td>
                            </tr>
                            }
                            else
                            {
                                <tr>
                                <td>Thông tin Imei:</td>
                                <td>Chưa đăng nhập</td>
                            </tr>
                            }

                        </tbody>
                    </table>
                }
            </fieldset>

        </div>
    </div>
