@model NDHSITE.Models.AwardInfo
@{
    ViewBag.Title = "ModifyAward";
}

<div class="row">
    <div class="col-sm-6">
        <div class="portlet portlet-boxed">
            <div class="portlet-header">
                <h4 class="portlet-title">
                    Chỉnh sửa phần quà
                </h4>
            </div> <!-- /.portlet-header -->
            <div class="portlet-body">
                <form method="post" action="/eventmanage/modifyaward" onsubmit="if(!confirm('Chỉnh sửa phần quà?')){return false;}" enctype="multipart/form-data">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label>Tên phần quà</label>
                        <input type="text" name="Name" class="form-control" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label>Điển</label>
                        <input type="number" name="Point" class="form-control" value="@Model.Point" />
                    </div>
                    <div class="form-group">
                        <label>Hình sản phẩm</label>
                        <input type="file" name="files" class="form-control" />
                        <div class="thumbnail">
                            <div class="thumbnail-view">
                                <a href="@Model.Thumbnail" class="image-link" title="@Model.Name">
                                    <img src="@Model.Thumbnail" alt="@Model.Name" class="img-responsive" width="125" />
                                </a>
                            </div>
                        </div> <!-- /.thumbnail -->
                    </div>



                    <button class="btn btn-primary" type="submit">Chỉnh sửa</button>
                </form>



            </div>
        </div>
    </div>
</div>