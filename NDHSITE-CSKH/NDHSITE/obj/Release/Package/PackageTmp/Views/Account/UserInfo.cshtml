@model NDHSITE.Models.UserInfoData
@{
    ViewBag.Title = "UserInfo";
}

<div class="page-header">
    <h3 class="page-title">Thông tin user</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Thông tin user</a></li>
    </ol>
</div> <!-- /.page-header -->

<div class="portlet-body">
    <form method="get">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <input type="text" class="form-control" name="user" value="@ViewBag.User" />

                </div>
                <button class="btn btn-primary">Xem</button>
            </div>
        </div>
    </form>
    <br />
    @if (Model != null)
    {
        <form method="post" action="/">
            <input type="hidden" value="@Model.user" name="user"/>
            <button class="btn btn-primary" type="submit">Xóa tài khoản</button>
        </form>
        
        
         <table class="table table-striped table-bordered thumbnail-table">
       
        <tbody>
            <tr>
                <td>Tài khoản của: </td>
                <td>@Model.type</td>
            </tr>
            <tr>
                <td>Mã tài khoản:</td>
                <td>@Model.code</td>
            </tr>
            <tr>
                <td>Họ và tên: </td>
                <td>@Model.fullname</td>
            </tr>
            <tr>
                <td>Địa chỉ: </td>
                <td>@Model.address</td>
            </tr>
            <tr>
                <td>Điện thoại: </td>
                <td>@Model.phone</td>
            </tr>
            <tr>
                <td>Ngày sinh: </td>
                <td>@Model.birthday</td>
            </tr>
            <tr>
                <td>Tài khoản : </td>
                <td>@Model.user</td>
            </tr>
            <tr>
                <td>Khu vực: </td>
                <td>@Model.area</td>
            </tr>
            <tr>
                <td>Chi nhánh:</td>
                <td>@Model.branch</td>
            </tr>
        </tbody>
    </table>
    }
   
</div>