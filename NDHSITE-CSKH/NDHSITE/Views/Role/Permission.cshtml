@model IEnumerable<NDHSITE.Models.FuncRole>
@{
    ViewBag.Title = "Permission";
}

<div class="page-header">
    <h3 class="page-title">Quản trị</h3>

    <ol class="breadcrumb">
        <li><a href="/home">Trang chủ</a></li>
        <li><a href="#">Quản trị</a></li>
    </ol>
</div> <!-- /.page-header -->


<div class="portlet portlet-boxed">

    <div class="portlet-body">
        <div class="layout layout-main-right layout-stack-sm">
            <div class="col-md-3 col-sm-3 layout-sidebar">
              @Html.Action("AdminSlideMenu", "Home", new { code = "rolepermission" })
            </div>
            <div class="col-md-9 col-sm-9 layout-main">
                <div id="settings-content" class="tab-content stacked-content">
                    <div class="tab-pane fade in active">
                        <form method="get">
                            <div class="row">
                                <div class="col-sm-6">
                                    <select name="roleName" class="form-control" id="chooseRole">
                                        <option value="">--Chọn--</option>
                                        @foreach (var item in ViewBag.Roles)
                                        {
                                            if (ViewBag.RoleName == item.Name)
                                            {
                                                <option value="@item.Name" selected>@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Name">@item.Name</option>
                                            }

                                        }
                                    </select>
                                </div>
                                <div class="col-sm-6">
                                    <button class="btn btn-primary" type="submit">Xem</button>
                                </div>
                            </div>
                        </form>
                        <br />
                        <br />

                        <table class="table table-striped table-bordered thumbnail-table">

                            <thead>
                                <tr>
                                    <th>Chức năng</th>
                                    <th>Nhóm</th>
                                    <th>Toàn quyền</th>
                                    <th>Chọn</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (ViewBag.FuncList != null)
                                {

                                    foreach (var func in ViewBag.FuncList as IEnumerable<NDHSITE.Models.FuncInfo>)
                                    {
                                        var funcRole = Model.Where(p => p.FuncId == func.Id).FirstOrDefault();

                                        <tr>
                                            <td>@func.Name</td>
                                            <td>@func.FuncGroup.Name</td>
                                            <td><input type="checkbox" class="form-control addisall" @((funcRole != null && funcRole.IsAll == 1) ? "checked" : "") data-uid="@func.Id" value="@ViewBag.RoleName" /></td>
                                            <td><input type="checkbox" class="form-control addfunc" @(funcRole != null ? "checked" : "") data-uid="@func.Id" value="@ViewBag.RoleName" /></td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript">
        $(".addfunc").click(function () {
            uid = $(this).attr("data-uid");
            role = $(this).val();
            add = $(this).prop("checked");
            console.log(uid + "  " + role + "  " + add);

            $.ajax({
                type: "GET",
                url: "/role/AddFuncToRole",
                data: { FuncId: uid, RoleName: role, IsAdd: add },
                success: function (response) {
                    alert(response);
                }
            });

        });

        $(".addisall").click(function () {
            uid = $(this).attr("data-uid");
            role = $(this).val();
            add = $(this).prop("checked");
            console.log(uid + "  " + role + "  " + add);

            $.ajax({
                type: "GET",
                url: "/role/AddFuncIsAll",
                data: { FuncId: uid, RoleName: role, IsAdd: add },
                success: function (response) {
                    alert(response);
                }
            });

        });


    </script>
}
